<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jz.zhdcpucardreader.MainActivity"
    tools:layout_editor_absoluteY="89dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="40dp"
        android:text="CPU 卡测试"
        android:textSize="30dip"
        app:layout_constraintBottom_toTopOf="@+id/edRecv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <Button
        android:id="@+id/btRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:text="读cpu卡"
        app:layout_constraintEnd_toStartOf="@+id/edRecv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edRecv" />

    <EditText
        android:id="@+id/edRecv"
        android:layout_width="0dp"
        android:layout_height="234dp"

        android:layout_marginBottom="90dp"
        android:layout_marginEnd="58dp"
        android:background="#fffffaf2"
        android:ems="10"
        android:gravity="left|center|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btRead" />

    <Button
        android:id="@+id/btClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="21dp"
        android:text="清屏"
        app:layout_constraintEnd_toStartOf="@+id/edRecv"
        app:layout_constraintTop_toBottomOf="@+id/btRead" />
</android.support.constraint.ConstraintLayout>
